#header
  .logo
    svg
      width: 50%
      height: auto
      fill: white

.main-menu
  margin-top: $margin-small
  margin-bottom: $margin-small

.grid-post
  position: relative

.grid-title
  position: absolute
  bottom: 0
  right: 0
  left: 0
  width: 100%
  background-image: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%)

.content-copy
  p
    margin-bottom: $margin-small
    line-height: 2
