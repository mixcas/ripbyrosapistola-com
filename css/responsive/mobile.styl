body
  &.mobile-menu
    overflow: hidden
    height: 100vh

#main-container
  min-height: 100vh

.desktop-header
  display: none

// MOBILE MENU

#mobile-menu
  font-size: 1.8rem
  position: fixed
  top: 0
  width: 100vw
  height: 100vh
  transform: translateY(-100%)
  transition: transform 250ms ease-in-out

  &.active
    transform: translateY(0)

  .menu-toggle
    position: absolute
    bottom: 7px
    right: 14px

.mobile-menu-links
  height: 100%

#main-content
  flex: 1 1 auto

svg
  max-width: 100%

.logo
  svg
    width: auto
    height: 50px
    fill: $color-white

.social-icon
  svg
    width: 30px
    height: 30px
    fill: $color-white

.background-image
  width: 100%
  height: 100%
  background-position: top center
  background-size: auto 100%

.posts-grid
  .background-image
    height: 75vh

.grid-post
  position: relative

.grid-title
  position: absolute
  bottom: 0
  right: 0
  left: 0
  width: 100%
  background-image: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%)

img
  max-width: 100%

// WOOCOMMERCE
.woocommerce
  input
    line-height: $font-size-basic
    padding: $margin-tiny

#footer-logo
  svg
    fill: $color-white
    width: 100%

// PRODUCTS
.single-product
  .sku_wrapper
    display: none
