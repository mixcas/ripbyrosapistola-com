body
  &.mobile-menu
    overflow: hidden
    height: 100vh

#main-container
  min-height: 100vh

// MOBILE MENU

#mobile-menu
  position: fixed
  top: 0
  width: 100vw
  height: 100vh
  transform: translateY(-100%)
  transition: transform 250ms ease-in-out

  &.active
    transform: translateY(0)


#main-content
  flex: 1 1 auto

.logo
  svg
    width: auto
    height: 50px

.background-image
  width: 100%
  height: 100%
  background-position: top center
  background-size: auto 100%

.posts-grid
  .background-image
    height: 274px

img
  max-width: 100%

// WOOCOMMERCE
.woocommerce
  input
    line-height: $font-size-basic
    padding: $margin-tiny
